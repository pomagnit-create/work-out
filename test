<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Workout Tracker</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      margin: 0;
      padding: 2rem;
    }
    h1 {
      text-align: center;
    }
    .day {
      display: flex;
      align-items: center;
      margin-bottom: 1rem;
    }
    .day input[type="checkbox"] {
      margin-right: 1rem;
      transform: scale(1.5);
    }
    .day textarea {
      flex: 1;
      padding: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 5px;
      resize: vertical;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
    }
    .save-btn {
      display: block;
      margin: 2rem auto 0;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .save-btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <h1>Мой Трекер Тренировок</h1>
  <div class="container" id="tracker"></div>
  <button class="save-btn" onclick="saveData()">Сохранить прогресс</button>

  <script>
    const days = 30;
    const tracker = document.getElementById('tracker');

    for (let i = 1; i <= days; i++) {
      tracker.innerHTML += `
        <div class="day">
          <input type="checkbox" id="day${i}" />
          <label for="day${i}">День ${i}</label>
          <textarea id="comment${i}" rows="2" placeholder="Комментарий..."></textarea>
        </div>
      `;
    }

    function saveData() {
      const data = {};
      for (let i = 1; i <= days; i++) {
        data[`day${i}`] = {
          completed: document.getElementById(`day${i}`).checked,
          comment: document.getElementById(`comment${i}`).value
        };
      }
      localStorage.setItem('workoutTracker', JSON.stringify(data));
      alert('Прогресс сохранён!');
    }

    function loadData() {
      const data = JSON.parse(localStorage.getItem('workoutTracker')) || {};
      for (let i = 1; i <= days; i++) {
        if (data[`day${i}`]) {
          document.getElementById(`day${i}`).checked = data[`day${i}`].completed;
          document.getElementById(`comment${i}`).value = data[`day${i}`].comment;
        }
      }
    }

    window.onload = loadData;
  </script>
</body>
</html>
